<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.wade.mapper.SiteSettingMapper">
    <!--查询站点设置-->
    <select id="getList" resultType="top.wade.entity.SiteSetting">
        select * from site_setting
    </select>

    <!--查询友链页面信息-->
    <select id="getFriendInfo" resultType="top.wade.entity.SiteSetting">
        select * from site_setting where type=4
    </select>

</mapper>